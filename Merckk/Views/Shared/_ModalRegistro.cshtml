<!-- Modal registro -->
<div class="row">
  <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content main-modal">
        <img src="/Content/img/icono-04.png" alt="" class="left-modal-img">
        <div class="modal-header text-center main-modal-header">
          <h4 class="modal-title w-100 font-weight-bold">¡Demuestra tu  mejor version de Amo!</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <!--<span aria-hidden="true">&times;</span>-->
          </button>
        </div>
        <div class="modal-body mx-3">
          <div class="md-form mb-5">
            <i class="fa fa-user prefix grey-text glyphicon glyphicon-user main-modal-icon"></i>
            <input type="text" id="orangeForm-name" class="form-control validate modal-input" placeholder="Tu Nombre">
          </div>
          <div class="md-form mb-5">
            <i class="fa fa-envelope prefix grey-text main-modal-icon"></i>
            <input type="email" id="orangeForm-emaill" class="form-control validate modal-input" placeholder="Tu Correo">
          </div>

          <div class="md-form mb-4">
            <i class="fa fa-lock prefix grey-text main-modal-icon"></i>
            <input type="password" id="orangeForm-passs" class="form-control validate modal-input" placeholder="Tu Contraseña">
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-center main-modal-btn">
          <button class="btn btn-deep-orange btn-modal">Ingresar</button>
        </div>
        <fb:login-button size="large"
                         class="btn-fb"
                         id="fb-btn"
                         scope="public_profile,email"
                         onlogin="checkLoginState();">
          Ingresa con Facebook
        </fb:login-button>
      </div>
    </div>
  </div>
</div>
